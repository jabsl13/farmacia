<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_l10n_bo_company_activities_search" model="ir.ui.view">
        <field name="name">l10n_bo.company.activities.search</field>
        <field name="model">l10n_bo.company.activities</field>
        <field name="arch" type="xml">
            <search string="Search By">
                <field name="code"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <record id="view_l10n_bo_company_activities_form" model="ir.ui.view">
        <field name="name">l10n_bo.company.activities.form</field>
        <field name="model">l10n_bo.company.activities</field>
        <field name="arch" type="xml">
            <form string="SIN Economic Activities">
                <group>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="type"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_l10n_bo_company_activities_tree" model="ir.ui.view">
        <field name="name">l10n_bo.company.activities.tree</field>
        <field name="model">l10n_bo.company.activities</field>
        <field name="arch" type="xml">
            <tree string="SIN Economic Activities">
                <field name="code"/>
                <field name="name"/>
                <!-- <field name="tax_category"/> -->
                <field name="type"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_l10n_bo_company_activities">
        <field name="name">SIN Activities</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">l10n_bo.company.activities</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem name="SIN Activities"
              id="menu_l10n_bo_company_activities"
              action="act_l10n_bo_company_activities"
              parent="l10n_bo_edi.menu_sin_bolivia"
              sequence="6"/>
</odoo>