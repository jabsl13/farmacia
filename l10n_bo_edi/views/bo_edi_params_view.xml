<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bo_edi_params_search" model="ir.ui.view">
        <field name="name">l10n_bo.bo.edi.params.search</field>
        <field name="model">bo.edi.params</field>
        <field name="arch" type="xml">
            <search string="Search By">
                <field name="name"/>
                <field name="param_code"/>
                <field name="value"/>
            </search>
        </field>
    </record>

    <record id="view_bo_edi_params_form" model="ir.ui.view">
        <field name="name">l10n_bo.bo.edi.params.form</field>
        <field name="model">bo.edi.params</field>
        <field name="arch" type="xml">
            <form string="SIN Items">
                <group>
                    <field name="name"/>
                    <field name="param_code"/>
                    <field name="value"/>
                    <field name="active"/>
                </group>
            </form>
        </field>
    </record>

    <record id="view_bo_edi_params_tree" model="ir.ui.view">
        <field name="name">l10n_bo.bo.edi.params.tree</field>
        <field name="model">bo.edi.params</field>
        <field name="arch" type="xml">
            <tree string="SIN Items">
                <field name="name"/>
                <field name="param_code"/>
                <field name="value"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_bo_edi_params">
        <field name="name">Parametros SIAT</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">bo.edi.params</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="menu_bo_edi_params"
        action="act_bo_edi_params"
        parent="l10n_bo_edi.menu_sin_bolivia"
        sequence="8"/>
</odoo>