<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_bo_form" model="ir.ui.view">
        <field name="name">res_config_settings_view_bo_form.electronic.inv</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='invoicing_settings']" position="after">
                <div id="l10n_bo_local" attrs="{'invisible': [('country_code', '!=', 'BO')]}">
                    <div id="l10n_bo_title">
                        <h2>Bolivian Localization</h2>
                    </div>
                    <div id="l10n_bo_section"
                         class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Invoicing Type</span>
                                <span class="fa fa-lg fa-money" title="Values set here are company-specific."
                                      aria-label="Values set here are company-specific."
                                      groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Change the current invoicing modality type
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Electronic Billing: " for="l10n_bo_invoicing_type"
                                               class="col-lg-4 o_light_label"/>
                                        <field name="l10n_bo_invoicing_type" widget="boolean_toggle"/>

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Accounting Reports</span>
                                <span class="fa fa-file-text-o" title="Values set here are company-specific."
                                      aria-label="Values set here are company-specific."
                                      groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Install/Uninstall Bolivian accounting reports
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <label string="Accounting Reports: " for="module_l10n_bo_reports"
                                               class="col-lg-4 o_light_label"/>
                                        <field name="module_l10n_bo_reports" widget="boolean_toggle"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 o_setting_box" attrs="{'invisible': [('l10n_bo_invoicing_type', '!=', True)]}"
                             title="The parameters to configure the signature certificate.">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Signature Certificates</span>
                                <span class="fa fa-lg fa-building-o" title="Values set here are company-specific."
                                      aria-label="Values set here are company-specific."
                                      groups="base.group_multi_company" role="img"/>
                                <div class="text-muted">
                                    Configure your signature certificates to sign
                                </div>
                                <div class="content-group">
                                    <div class="row mt16">
                                        <br/>
                                        <button name="%(l10n_bo_edi.certificate_list_action)d" icon="fa-arrow-right"
                                                type="action"
                                                string="Configure Signature Certificates" class="btn-link"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="l10n_boedi_config_container"
                         attrs="{'invisible': [('l10n_bo_invoicing_type', '!=', True)]}">
                        <div id="l10n_bo_section" class="row mt16 o_settings_container"
                             attrs="{'invisible': [('country_code', '!=', 'BO')]}">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">SIN Codes</span>
                                    <div class="text-muted">
                                        Codes provided by SIN
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="System Code" for="l10n_bo_system_code"
                                                   class="col-lg-4 o_light_label"/>
                                            <field name="l10n_bo_system_code" context="{'search_by_code': True}"/>
                                            <label string="Token Api Delegated" for="l10n_bo_token"
                                                   class="col-lg-4 o_light_label"/>
                                            <field name="l10n_bo_token"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Invoicing Modality</span>
                                    <div class="text-muted">
                                        Select the invoicing modality
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Invoicing Modality" for="l10n_bo_invoicing_modality"
                                                   class="col-lg-4 o_light_label"/>
                                            <field name="l10n_bo_invoicing_modality"
                                                   context="{'search_by_code': True}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Ambience</span>
                                    <div class="text-muted">
                                        Select the system ambience
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Ambience" for="l10n_bo_ambience"
                                                   class="col-lg-4 o_light_label"/>
                                            <field name="l10n_bo_ambience" context="{'search_by_code': True}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Package Number</span>
                                    <div class="text-muted">
                                        Set the number of invoices per package
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Package Number" for="l10n_bo_invoice_package_number"
                                                   class="col-lg-4 o_light_label"/>
                                            <field name="l10n_bo_invoice_package_number"
                                                   context="{'search_by_code': True}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Sector Type</span>
                                    <div class="text-muted">
                                        Select the invoice sector type
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Sector Type" for="l10n_bo_sector_type"
                                                   class="col-lg-4 o_light_label"/>
                                            <field name="l10n_bo_sector_type" context="{'search_by_code': True}"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="l10n_bo_config_container" attrs="{'invisible': [('l10n_bo_invoicing_type', '!=', False)]}">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <span class="o_form_label">Selling Point</span>
                                <div class="text-muted">
                                    Manage information related to Dosage
                                </div>
                                <div class="content-group">
                                    <button name='%(invoice_dosage_action)d' icon="fa-arrow-right" type="action"
                                            string="Invoice Dosage" class="btn-link"/>
                                    <br/>
                                    <button name='%(selling_point_action)d' icon="fa-arrow-right" type="action"
                                            string="Manage Selling Points" class="btn-link"/>
                                    <br/>
                                    <button name='%(branch_office_action)d' icon="fa-arrow-right" type="action"
                                            string="Manage Branch Offices" class="btn-link"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>