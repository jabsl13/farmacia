<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="invoice_dosage_view_form">
        <field name="name">invoice.dosage.view.form</field>
        <field name="model">invoice.dosage</field>
        <field name="arch" type="xml">
            <form string="Invoice Dosage Form">
                <header>
                    <button string="Get CUIS" type="object" name="get_cuis_dosage"/>
                    <button string="Get CUFD" type="object" name="get_cufd_dosage"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <span class="o_form_label">Dosage
                        </span>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="key"/>
                            <field name="cuis"/>
                            <field name="cufd_log_id"/>
                            <field name="cafc_log_id"/>
                            <field name="auth_number"/>
                        </group>
                        <group>
                            <field name="end_date"/>
                            <field name="invoice_number"/>
                            <field name="invoice_number_dc"/>
                            <field name="selling_point_id"/>
                            <field name="sector_siat_id"/>
                            <field name="invoice_caption_id"/>
                            <field name="user_ids" widget="many2many_tags" options="{'no_create': true}"
                                   domain="[('l10n_bo_selling_point_id','=',selling_point_id)]"/>
                            <field name="active"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Invoice Dosage List -->
    <record model="ir.ui.view" id="invoice_dosage_view_list">
        <field name="name">selling.point.view.list</field>
        <field name="model">invoice.dosage</field>
        <field name="arch" type="xml">
            <tree string="Invoice Dosage">
                <field name="name"/>
                <field name="code"/>
                <field name="auth_number"/>
                <field name="end_date"/>
                <field name="invoice_number"/>
            </tree>
        </field>
    </record>

    <!-- Invoice Dosage Search -->
    <record model="ir.ui.view" id="invoice_dosage_view_search">
        <field name="name">selling.point.view.search</field>
        <field name="model">invoice.dosage</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="auth_number"/>
                <field name="end_date"/>
                <field name="invoice_number"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_invoice_dosage">
        <field name="name">Dosage invoice</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">invoice.dosage</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_invoice_dosage"
            action="act_invoice_dosage"
            parent="l10n_bo_edi.menu_sin_bolivia"
            sequence="14"/>

</odoo>
