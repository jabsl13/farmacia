<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="certificate_form_view" model="ir.ui.view">
            <field name="name">certificate.form</field>
            <field name="model">l10n_bo.certificate</field>
            <field name="arch" type="xml">
                <form string="Certificate Form">
                    <header>
                        <button name="create_pem" string="Create Pem Files" type="object" class="oe_highlight"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="content" filename="content_name"/>
                            <field name="content_name" invisible="1"/>
                            <field name="password" password="True"/>
                            <field name="signature_crt_file" filename="signature_crt_filename"/>
                            <field name="signature_crt_filename" invisible="1"/>
                            <field name="signature_key_file" filename="signature_key_filename"/>
                            <field name="signature_key_filename" invisible="1"/>
                            <field name="cert_expiration"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="certificate_tree_view">
            <field name="name">certificate.tree</field>
            <field name="model">l10n_bo.certificate</field>
            <field name="arch" type="xml">
                <tree string="Certificate Tree">
                    <field name="content_name"/>
                    <field name="signature_crt_filename"/>
                    <field name="user_id"/>
                    <field name="cert_expiration"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </tree>
            </field>
        </record>

        <record id="certificate_list_action" model="ir.actions.act_window">
            <field name="name">Certificates</field>
            <field name="res_model">l10n_bo.certificate</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_my_certificates': 1}"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first certificate</p>
            </field>
        </record>
    </data>
</odoo>
