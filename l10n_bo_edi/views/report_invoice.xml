<odoo>
    <data>

        <record id="paperformat_euro_bol" model="report.paperformat">
            <field name="name">Formato A4</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">2</field>
            <field name="margin_bottom">2</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <!--
        <report
                id="account_invoices_bol_original"
                model="account.move"
                string="Factura Original"
                report_type="qweb-pdf"
                name="l10n_bo_edi.report_invoice_bol_original"
                file="l10n_bo_edi.report_invoice_bol_original"
                paperformat="l10n_bo_edi.paperformat_euro_bol"
                attachment="(object.state in ('open','paid','in_payment')) and ('INV'+(object.number or '').replace('/','')+'.pdf')"
        />
        -->
        <template id="report_invoice_document" inherit_id="account.report_invoice_document">
            <xpath expr="//div[@class='page']/.." position="replace">
                <div class="article" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
                     t-att-data-oe-lang="o and o.env.context.get('lang')">
                    <div class="page">
                        <div style="height: 5px;">
                        </div>
                        <table style="border-collapse: collapse; width: 100%;">
                            <col width="45%"/>
                            <col width="10%"/>
                            <col width="45%"/>
                            <tr>
                                <td class="text-center">
                                    <ul style="list-style: none; line-height:100%; font-size:14px;
                                                margin-top:-12px;margin-left:-65px">
                                        <li>
                                            <strong>CASA MATRIZ</strong>
                                        </li>
                                        <li>
                                            <span t-field="o.company_id.partner_id.street"/>
                                        </li>
                                        <li>
                                            Teléfono:
                                            <span t-field="o.company_id.partner_id.phone"/>
                                        </li>
                                        <li>
                                            <span t-field="o.company_id.partner_id.city"/>-
                                            <span t-field="o.company_id.partner_id.country_id.name"/>
                                        </li>
                                    </ul>
                                </td>
                                <td class="text-center">
                                </td>
                                <td>
                                    <table style="width: 400px;">
                                        <tr>
                                            <td>
                                                <strong>NIT:</strong>
                                            </td>
                                            <td>
                                                <span align="left" t-field="o.company_id.vat"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>FACTURA N°:</strong>
                                            </td>
                                            <td>
                                                <span align="left" t-field="o.l10n_bo_invoice_number"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <strong>COD. AUTORIZACIÓN:</strong>
                                            </td>
                                            <td>
                                                <span align="left" t-esc="o.l10n_bo_cuf[:20]"/>
                                                <br/>
                                                <span align="left" t-esc="o.l10n_bo_cuf[20:40]"/>
                                                <br/>
                                                <span align="left" t-esc="o.l10n_bo_cuf[40:60]"/>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3">
                                    <br/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="3" class="text-center">
                                    <ul style="list-style: none; line-height:100%; font-size:14px;">
                                        <li>
                                            <h5>
                                                <strong>FACTURA</strong>
                                            </h5>
                                        </li>
                                        <li>
                                            (Con Derecho a Crédito Fiscal)
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        </table>
                        <table>
                            <col width="40%"/>
                            <col width="30%"/>
                            <col width="30%"/>
                            <tr>
                                <td class="text-left" colspan="2">
                                    <strong>Fecha:</strong>
                                    <span t-field="o.l10n_bo_time"/>
                                </td>
                                <td class="text-left">
                                    <strong>NIT/CI/CEX:</strong>
                                    <span t-field="o.nit_ci"/>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-left" colspan="2">
                                    <strong>Nombre/Razon Social:</strong>
                                    <span t-field="o.razon_social"/>
                                </td>
                                <td class="text-left">
                                    <strong>Cod. Cliente:</strong>
                                    <span t-field="o.partner_id.id"/>
                                </td>
                            </tr>
                        </table>

                        <!-- Is there a discount on at least one line? -->
                        <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>
                        <table class="table table-sm" style="width:100%;">
                            <col width="10%"/>
                            <col width="10%"/>
                            <col width="15%"/>
                            <col width="35%"/>
                            <col width="10%"/>
                            <col width="10%"/>
                            <col width="10%"/>
                            <thead>
                                <tr style="line-height: 18px;">
                                    <th class="text-center" style="border:1px solid #000;">CODIGO PRODUCTO/SERVICIO
                                    </th>
                                    <td class="text-center" style="border:1px solid #000;">CANTIDAD</td>
                                    <th class="text-center" style="border:1px solid #000;">UNIDAD DE MEDIDA
                                    </th>
                                    <th class="text-center" style="border:1px solid #000;">DESCRIPCIÓN</th>
                                    <th class="text-center" style="border:1px solid #000;">PRECIO UNITARIO</th>
                                    <th class="text-center" style="border:1px solid #000;">DESCUENTO</th>
                                    <td class="text-center" style="border:1px solid #000;">SUBTOTAL</td>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="lines"
                                   t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>
                                <t t-foreach="lines" t-as="line">
                                    <tr style="line-height: 18px;"
                                        t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                            <td class="text-center" style="border:1px solid #000;">
                                                <t t-esc="'%.0f'%line.product_id.sin_item.sin_code"/>
                                            </td>
                                            <td style="border:1px solid #000;">
                                                <span t-field="line.quantity"/>
                                            </td>
                                            <td class="text-right" style="border:1px solid #000;">
                                                <span t-field="line.product_id.measure_unit.name"/>
                                            </td>
                                            <td class="text-right" style="border:1px solid #000;">
                                                <span t-field="line.product_id"/>
                                            </td>
                                            <td class="text-right" style="border:1px solid #000;">
                                                <t t-esc="'{0:,.2f}'.format(line.price_unit)"/>
                                            </td>
                                            <td class="text-right" style="border:1px solid #000;">
                                                0
                                            </td>
                                            <td class="text-right" style="border:1px solid #000;">
                                                <t t-set="t_total" t-value="line.quantity*line.price_unit"/>
                                                <t t-esc="'{0:,.2f}'.format(t_total)"/>
                                            </td>
                                        </t>
                                    </tr>
                                </t>
                                <tr t-foreach="range(max(5-len(o.invoice_line_ids),0))" t-as="l"
                                    style="line-height: 18px; border:1px solid #000;">
                                    <td style="line-height: 18px; border:1px solid #000;">&amp;nbsp;</td>
                                    <td style="line-height: 18px; border:1px solid #000;"></td>
                                    <td style="line-height: 18px; border:1px solid #000;"></td>
                                    <td style="line-height: 18px; border:1px solid #000;"></td>
                                    <td style="line-height: 18px; border:1px solid #000;"></td>
                                    <td style="line-height: 18px; border:1px solid #000;"></td>
                                    <td style="line-height: 18px; border:1px solid #000;"></td>
                                </tr>
                                <tr>
                                    <td colspan="4" rowspan="6">
                                        <t>
                                            <strong>Son:</strong>
                                            <span t-esc="o.amount_text"/>
                                        </t>
                                        <br></br>
                                        <t t-if="o.amount_imp != o.amount_total">
                                            <strong>Importe base para Crédito Fiscal, Ley° 317 Bs.:</strong>
                                            <t t-esc="'{0:,.2f}'.format(o.amount_total-o.amount_exe - o.amount_ice_iehd)"/>
                                        </t>
                                        <br t-if="o.amount_imp != o.amount_total"></br>
                                    </td>
                                    <td colspan="2" style="border:1px solid #000; height: 18px !important;">
                                        SUBTOTAL Bs.:
                                    </td>
                                    <td class="text-right" style="border:1px solid #000; height: 18px !important;">
                                        <t t-esc="'{0:,.2f}'.format(o.amount_open)"/>
                                    </td>
                                </tr>
                                <tr style="line-height: 18px;">
                                    <td colspan="2" style="border:1px solid #000;">
                                        DESCUENTO Bs.:
                                    </td>
                                    <td class="text-right" style="border:1px solid #000;">
                                        <t t-esc="'{0:,.2f}'.format(o.amount_des)"/>
                                    </td>
                                </tr>
                                <tr style="line-height: 18px;">
                                    <td colspan="2" style="border:1px solid #000;">
                                        TOTAL Bs.:
                                    </td>
                                    <td class="text-right" style="border:1px solid #000;">
                                        <t t-esc="'{0:,.2f}'.format(o.amount_total)"/>
                                    </td>
                                </tr>
                                <tr style="line-height: 18px;">
                                    <td colspan="2" style="border:1px solid #000;">
                                        MONTO GIFT CARD Bs.:
                                    </td>
                                    <td class="text-right" style="border:1px solid #000;">
                                        <t t-esc="'{0:,.2f}'.format(o.amount_giftcard)"/>
                                    </td>
                                </tr>
                                <tr style="line-height: 18px;">
                                    <td colspan="2" style="border:1px solid #000; font-weight: bold;">
                                        MONTO A PAGAR Bs.:
                                    </td>
                                    <td class="text-right" style="border:1px solid #000;">
                                        <t t-esc="'{0:,.2f}'.format(o.amount_total)"/>
                                    </td>
                                </tr>
                                <tr style="line-height: 18px;">
                                    <td colspan="2" style="border:1px solid #000; font-weight: bold;">
                                        IMPORTE BASE CRÉDITO FISCAL Bs.:
                                    </td>
                                    <td class="text-right" style="border:1px solid #000;">
                                        <t t-esc="'{0:,.2f}'.format(o.amount_total)"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="clearfix">
                            <div id="total" class="row">

                            </div>
                            <div name="reference">
                            </div>
                        </div>
                        <table>
                            <tr>
                                <td colspan="4" rowspan="4" class="text-center">
                                    <strong style="font-size:14px; font-weight: bold;">ESTA FACTURA CONTRIBUYE AL
                                        DESARROLLO
                                        DEL PAÍS, EL USO ILÍCITO SERÁ SANCIONADO PENALMENTE DE ACUERDO A LEY
                                    </strong>
                                    <br/>
                                    <span style="font-size:12px;" t-esc="o.dosage_id.invoice_caption_id.name"/>
                                </td>
                                <td>
                                    <img t-if="o.qr_image" t-att-src="image_data_uri(o.qr_image)"
                                         class="float-right"
                                         alt="Logo"
                                         style="width: 150px; height: 150px; margin-right: 10px; display:inline"/>
                                </td>
                            </tr>
                        </table>
                        <p t-if="o.narration" name="comment">
                            <span t-field="o.narration"/>
                        </p>
                    </div>
                </div>
            </xpath>
        </template>

        <!--
        <template id="report_invoice_bol_original">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="lang"
                       t-value="o.user_id.lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-call="l10n_bo_edi.report_invoice_document_bol_original" t-lang="lang"/>
                </t>
            </t>
        </template>
        -->
    </data>
</odoo>